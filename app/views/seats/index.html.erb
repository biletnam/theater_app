<h1>Listing Seats</h1>

<h2>For the showing of <%= @showtime.movie.name %> on <%= @showtime.date %> at <%= @showtime.start_time %></h2>

<table>
  <tr>
    <th>Row</th>
    <th>Chair Letter</th>
    <th>Reservation Status</th>
    <!-- <th></th> -->
    <!-- <th></th> -->
    <!-- <th></th> -->
  </tr>


<% @showtime.seats.sort_by.each do |seat| %>
  <tr>
    <td><%= seat.row %></td>
    <td><%= seat.chair_letter %></td>
    <td>
      <% if !seat.user_id.nil? %>
        Reserved by: <%= seat.user.email %>
      <% else %>
        <%= link_to "Reserve this seat!", [@showtime, seat] %>
      <% end %>
    </td>
    <!-- <td><%#= link_to 'Show', [@showtime, seat] %></td> -->
    <!-- <td><%#= link_to 'Edit', [:edit, @showtime, seat] %></td> -->
    <!-- <td><%#= link_to 'Destroy', [@showtime, seat], method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
  </tr>
<% end %>
</table>

