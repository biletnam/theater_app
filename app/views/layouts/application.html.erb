<!DOCTYPE html>
<html>
<head>
  <title>TheaterApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar">
    <div class="row">
    <section class="top-bar-section">
      <ul class="left">
        <li class="active"><a href="/"><%= image_tag("white_home.png") %></a></li>
        <li class="divider"></li>
          <% if current_user %>
            <li><a href="#">Logged in as <%= current_user.email %></a></li>
            <li class="divider"></li>
            <li><%= link_to "Log Out", logout_path %></li>
            <li class="divider"></li>
          <% else %>
            <li><%= link_to "Signup", login_path %></li>
            <li class="divider"></li>
            <li><%= link_to "Log In", login_path %></li>
            <li class="divider"></li>
          <% end %>
      </ul>
  </nav>

  <% unless flash[:notice].blank? %>
    <p id="flash_notice"><%= flash[:notice] %></p>
  <% end %>

  <% unless flash[:alert].blank? %>
    <p id="flash_alert"><%= flash[:alert] %></p>
  <% end %>

<%= yield %>

</body>
</html>
